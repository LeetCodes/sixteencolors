<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="[% base %]/favicon.ico">

    <title>Sixteen Colors ANSI/ASCII Art Archive</title>

    <link href="[% base %]/static/css/bootstrap.min.css" rel="stylesheet">
    <link href="[% base %]/static/css/typeaheadjs.css" rel="stylesheet">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
body {
    margin-top: 50px;
}
    </style>
  </head>

  <body>

[% PROCESS header.tt %]

  <div class="container">
[% content | none %]
  </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="[% base %]/static/js/bootstrap.min.js"></script>
    <script src="[% base %]/static/js/audio.min.js"></script>
    <script src="[% base %]/static/js/typeahead.bundle.min.js"></script>
    <script>
      audiojs.events.ready(function() {
        var as = audiojs.createAll();
      });

      var groups = new Bloodhound({
        datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
        queryTokenizer: Bloodhound.tokenizers.whitespace,
        limit: 10,
        prefetch: {
          url: '[% base %]/group/autocomplete'
        },
        remote: {
          url: '[% base %]/group/autocomplete?q=%QUERY'
        }
      });
 
      groups.initialize();
 
      $('.group-typeahead').typeahead(null, {
        name: 'groups',
        displayKey: 'name',
        source: groups.ttAdapter()
      });

      var tags = new Bloodhound({
        datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
        queryTokenizer: Bloodhound.tokenizers.whitespace,
        limit: 10,
        prefetch: {
          url: '[% base %]/tag/autocomplete'
        },
        remote: {
          url: '[% base %]/tag/autocomplete?q=%QUERY'
        }
      });
 
      tags.initialize();
 
      $('.tag-typeahead').typeahead(null, {
        name: 'tags',
        displayKey: 'name',
        source: tags.ttAdapter()
      });
    </script>
  </body>
</html>

